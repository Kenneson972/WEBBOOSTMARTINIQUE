# 02switch optimisé – sans directives interdites (pas de <Directory>)
# 1) Redirection HTTPS
<IfModule mod_rewrite.c>
  RewriteEngine On
  # Si HTTPS est off, rediriger vers HTTPS
  RewriteCond %{HTTPS} !=on
  RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

  # Ne pas réécrire si fichier/dossier existe
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # 2) URLs propres pour quelques pages
  RewriteRule ^devis/?$ devis.html [L]
  RewriteRule ^services/?$ services.html [L]
  RewriteRule ^contact/?$ contact.html [L]
</IfModule>

# 3) Cache navigateur (si module présent)
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
</IfModule>

# 4) Compression GZIP (si module présent)
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/plain text/html text/css application/javascript application/json image/svg+xml
</IfModule>

# 5) Fichier par défaut
DirectoryIndex index.html